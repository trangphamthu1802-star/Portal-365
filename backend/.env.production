# Portal 365 Production Environment Configuration
# Copy this file to .env and modify the values for your production server

# Server Configuration
PORT=8080
APP_ENV=production

# Database
SQLITE_DSN=file:portal.db?_busy_timeout=5000

# JWT Configuration
# IMPORTANT: Change these secrets in production!
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL=720h

# CORS Configuration
# Not needed in production as AllowAllOrigins is enabled
# But keep for reference if you want to restrict origins later
CORS_ALLOWED_ORIGINS=*
